<h1><%= @author.name%></h1>
<% @author.books.each do |book| %>
  <p>Title: <%= book.title %></p>
  <p>Pages: <%= book.pages %></p>
  <p>Publication: <%= book.publication_year %></p>
  <% if book.co_authors(@author).any? %>
    <p>
      Co-Authors: 
      <% book.co_authors(@author).each do |author| %>
        <%= author.name %></p>
      <% end %>
    </p>
  <% end %>
<% end %>