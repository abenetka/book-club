<%= render '/reviews/navigation/header' %>
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Create Book</h1>
  </div>
</div>
<section class="books_background_img">
  <div class="form_container">
    <%= form_for @book do |f| %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Book Title", class: 'form-control' %>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.text_area :pages, placeholder: "Page Count", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_area :publication_year, placeholder: "Publication Date", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_area :authors, value: "", placeholder: "Author names (comma seperated)", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</section>