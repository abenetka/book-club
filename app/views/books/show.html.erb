<h2><%= @book.title %></h2>
  <p>Pages: <%= @book.pages %></p>
  <p>Publication: <%= @book.publication_year %></p>
  <% @book.authors.each do |author| %>
    <p>Author: <%= author.name %></p>
  <% end %>
  <article id="top-three">
    <p>Top Three Ratings: </p>
     <% @top_three.each do |review| %>
      <%= review.title %>
      <%= review.rating %>
      <%= review.user.name %>
    <% end %>
  </article>
  <article id="bottom-three">
    <p> Bottom Three Ratings: </p>
    <% @bottom_three.each do |review| %>
      <%= review.title %>
      <%= review.rating %>
      <%= review.user.name %>
    <% end %>
  </article>
  <% @book.reviews.each do |review| %>
    <p>Review: <%= review.title %></p>
    <p><%= review.description %></p>
    <p>Rating: <%= review.rating %></p>
    <p>by: <%=link_to review.user.name, user_path(review.user) %></p>
  <% end %>
  <%= link_to "Delete Book", book_path(@book), method: :delete %>
  <%= link_to "Create a New Review", new_book_review_path(@book) %>
!
