<%= form_for [@book, @review] do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :rating %>
    <%= f.select :rating, [['1: Horrible', 1], ['2: Pretty bad', 2], ['3: Average', 3], ['4: Good', 4], ['5: Great', 5]] %>
  </p>
  <p>
    <%= f.label :user %>
    <%= f.text_area :user %>
    <% if @book_user && @book_user.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @book_user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>